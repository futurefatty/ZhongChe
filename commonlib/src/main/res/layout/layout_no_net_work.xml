<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_no_net_work_text"
        android:layout_width="@dimen/D130"
        android:layout_height="@dimen/D147"
        android:layout_marginTop="@dimen/D52"
        android:src="@mipmap/pic_status_nointernet" />

    <TextView
        android:id="@+id/tv_no_net_work_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/D12"
        android:text="网络链接异常，请检查网络后重试"
        android:textColor="@color/C666666"
        android:textSize="@dimen/common_textsize_12" />

</LinearLayout>