<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    android:orientation="vertical">
    <TextView
        android:id="@+id/frg_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/horizontal_margin">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_white_back"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="税票凭证抬头"
            android:textColor="@color/title_text"
            android:textSize="@dimen/size16sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/titleBarColorWhite"
        android:orientation="vertical"
        android:paddingLeft="@dimen/cols_paddingL"
        android:paddingRight="@dimen/cols_paddingL">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:paddingBottom="@dimen/cols_paddingB"
            android:paddingLeft="@dimen/cols_paddingL"
            android:paddingRight="@dimen/cols_paddingL"
            android:paddingTop="@dimen/cols_paddingT"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="类型"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/cols_text_size"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:hint="请选择"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/cols_text_size"/>
            <ImageView
                android:layout_width="@dimen/icon_arrow_right_W"
                android:layout_height="@dimen/icon_arrow_right_H"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY"
                android:src="@mipmap/btn_arrow_gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:paddingLeft="@dimen/cols_paddingL"
            android:paddingRight="@dimen/cols_paddingL">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingTop="@dimen/cols_paddingT"
                android:text="单位名称"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/cols_text_size"/>
            <TextView
                android:id="@+id/item_unit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingTop="@dimen/cols_paddingT"
                android:textSize="@dimen/cols_text_size"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:paddingLeft="@dimen/cols_paddingL"
            android:paddingRight="@dimen/cols_paddingL">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingTop="@dimen/cols_paddingT"
                android:text="税号"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/cols_text_size"/>
            <TextView
                android:id="@+id/item_tax_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingTop="@dimen/cols_paddingT"
                android:textSize="@dimen/cols_text_size"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:paddingLeft="@dimen/cols_paddingL"
            android:paddingRight="@dimen/cols_paddingL">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingTop="@dimen/cols_paddingT"
                android:text="单位地址"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/cols_text_size"/>
            <TextView
                android:id="@+id/item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingTop="@dimen/cols_paddingT"
                android:textSize="@dimen/cols_text_size"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:paddingLeft="@dimen/cols_paddingL"
            android:paddingRight="@dimen/cols_paddingL">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingTop="@dimen/cols_paddingT"
                android:text="电话号码"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/cols_text_size"/>
            <TextView
                android:id="@+id/item_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingTop="@dimen/cols_paddingT"
                android:textSize="@dimen/cols_text_size"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:paddingLeft="@dimen/cols_paddingL"
            android:paddingRight="@dimen/cols_paddingL">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingTop="@dimen/cols_paddingT"
                android:text="开户银行"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/cols_text_size"/>
            <TextView
                android:id="@+id/item_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingTop="@dimen/cols_paddingT"
                android:textSize="@dimen/cols_text_size"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lineColor"
            android:paddingLeft="@dimen/cols_paddingL"
            android:paddingRight="@dimen/cols_paddingL">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingTop="@dimen/cols_paddingT"
                android:text="银行账户"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/cols_text_size"/>
            <TextView
                android:id="@+id/item_bank_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingTop="@dimen/cols_paddingT"
                android:textSize="@dimen/cols_text_size"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>