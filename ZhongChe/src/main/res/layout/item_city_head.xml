<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/CFFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/D14"
        android:paddingRight="@dimen/D14"
        android:textColor="@color/C333333"
        android:textSize="@dimen/common_textsize_14"
        tools:text="当前城市" />


    <com.neusoft.zcapplication.widget.DefinedGridView
        android:id="@+id/grid_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/D11"
        android:numColumns="3"
        android:paddingLeft="@dimen/D14"
        android:paddingTop="@dimen/D13"
        android:paddingRight="@dimen/D41"
        android:paddingBottom="@dimen/D11"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/D11" />
</LinearLayout>