<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".flight.internation.InternationFlightListActivity">

    <include layout="@layout/layout_flight_list_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/CD8D8D8" />


    <LinearLayout
        android:id="@+id/ll_place_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/D8"
            android:layout_marginRight="@dimen/D8"
            android:layout_weight="1" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/CD8D8D8" />

        <LinearLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/D44"
            android:background="@color/CFFFFFF"
            android:orientation="horizontal" />
    </LinearLayout>

</LinearLayout>