<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/frg_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/horizontal_margin">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_white_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_order_detail"
            android:textColor="@color/title_text"
            android:textSize="@dimen/size16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/internal_order_detail_from_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color6"
                    android:textSize="@dimen/size14sp" />

                <ImageView
                    android:id="@+id/internal_order_detail_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/internal_order_detail_from_city"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_arrow_oneway_darkgray" />

                <TextView
                    android:id="@+id/internal_order_detail_to_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/internal_order_detail_arrow"
                    android:textColor="@color/color6"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/internal_order_detail_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color3"
                    android:textSize="@dimen/size14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/internal_order_detail_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color3"
                        android:textSize="@dimen/size16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/internal_order_detail_from_airport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#7B7F7F"
                        android:textSize="@dimen/size14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/internal_order_detail_differ_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#7B7F7F"
                        android:textSize="@dimen/size12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#d5d5d5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/internal_order_detail_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color3"
                        android:textSize="@dimen/size16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/internal_order_detail_to_airport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#7B7F7F"
                        android:textSize="@dimen/size14sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_row_divider"
                android:padding="10dp">

                <TextView
                    android:id="@+id/internal_order_detail_channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/internal_order_detail_airline_company"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/internal_order_detail_flight_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:textColor="#7B7F7F"
                        android:textSize="@dimen/size14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/internal_order_detail_cabin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/internal_order_detail_price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_row_divider"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="个人票价"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/internal_order_detail_ticket_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="￥900"
                    android:textColor="#333333"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/internal_order_detail_cost_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_row_divider"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="燃油和机建"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/internal_order_detail_ticket_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="￥100"
                    android:textColor="#333333"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_row_divider"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="服务费"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/internal_order_detail_service_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="￥0"
                    android:textColor="#333333"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>
            <!--退票费-->
            <LinearLayout
                android:id="@+id/internal_order_detail_return_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_row_divider"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/internal_order_detail_return_price_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="退票费"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/internal_order_detail_return_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="￥0"
                    android:textColor="#333333"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>
            <!--改签费-->
            <LinearLayout
                android:id="@+id/internal_order_detail_change_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_row_divider"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/internal_order_detail_change_price_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="改签费"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/internal_order_detail_change_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="￥0"
                    android:textColor="#333333"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_row_divider"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="个人总计"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/internal_order_detail_all_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="￥1000"
                    android:textColor="#c70019"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_row_divider"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="预定申请单"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/internal_order_detail_bill_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:paddingLeft="5dp"
                    android:textColor="#333333"
                    android:textSize="@dimen/size14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_row_divider"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="乘机人"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/internal_order_detail_psg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="right"
                    android:textColor="#333333"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_row_divider"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="票号"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/internal_order_detail_ticket_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="right"
                    android:textColor="#333333"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_row_divider"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="出票时间"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/internal_order_detail_get_ticket_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="right"
                    android:textColor="#333333"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>
            <!--退改签规则视图-->
            <LinearLayout
                android:id="@+id/internal_order_detail_ticket_rule_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退改签规则"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/internal_order_detail_ticket_rule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textColor="#333333"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <!--退票原因视图-->
            <LinearLayout
                android:id="@+id/internal_order_detail_ticket_return_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退票原因"
                    android:textColor="#7B7F7F"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/internal_order_detail_ticket_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textColor="#333333"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>