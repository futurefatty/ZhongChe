<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/titleBarColorWhite"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <LinearLayout
        android:id="@+id/item_hotel_trip_det_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingRight="6dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:src="@drawable/btn_delete"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/titleBarColorWhite"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="目的地"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/size14sp"/>
            <TextView
                android:id="@+id/item_hotel_trip_to_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="请选择目的地"
                android:padding="8dp"
                android:textColor="@color/mine_item_color"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/size14sp"/>
            <ImageView
                android:layout_width="@dimen/icon_arrow_right_W"
                android:layout_height="@dimen/icon_arrow_right_H"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/btn_arrow_gray"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_hotel_trip_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:orientation="horizontal"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="入住日期"
                    android:textColor="@color/mine_item_color"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/size12sp"/>
                <TextView
                    android:id="@+id/item_hotel_trip_checkIn_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请选择入住日期"
                    android:paddingTop="5dp"
                    android:textColor="@color/mine_item_color"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/size14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="离店日期"
                    android:textColor="@color/mine_item_color"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/size12sp"/>
                <TextView
                    android:id="@+id/item_hotel_trip_checkOut_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请选择离店日期"
                    android:paddingTop="5dp"
                    android:textColor="@color/mine_item_color"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/size14sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_hotel_trip_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#333333"
                android:textSize="@dimen/size12sp"/>
            <ImageView
                android:layout_width="@dimen/icon_arrow_right_W"
                android:layout_height="@dimen/icon_arrow_right_H"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/btn_arrow_gray"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>