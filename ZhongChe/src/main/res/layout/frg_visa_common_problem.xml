<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="@dimen/cols_paddingL"
        android:paddingRight="@dimen/cols_paddingL"
        android:paddingTop="@dimen/cols_paddingT"
        android:paddingBottom="@dimen/cols_paddingB"
        android:background="@color/titleBarColorWhite">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="什么是签证？"
            android:textSize="@dimen/size14sp"
            android:textColor="@color/mine_item_color"/>
        <ImageView
            android:layout_width="@dimen/icon_arrow_right_W"
            android:layout_height="@dimen/icon_arrow_right_H"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_arrow_gray"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="@dimen/cols_paddingL"
        android:paddingRight="@dimen/cols_paddingL"
        android:paddingTop="@dimen/cols_paddingT"
        android:paddingBottom="@dimen/cols_paddingB"
        android:background="@color/titleBarColorWhite">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="签证是如何分类的？"
            android:textSize="@dimen/size14sp"
            android:textColor="@color/mine_item_color"/>
        <ImageView
            android:layout_width="@dimen/icon_arrow_right_W"
            android:layout_height="@dimen/icon_arrow_right_H"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_arrow_gray"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="@dimen/cols_paddingL"
        android:paddingRight="@dimen/cols_paddingL"
        android:paddingTop="@dimen/cols_paddingT"
        android:paddingBottom="@dimen/cols_paddingB"
        android:background="@color/titleBarColorWhite">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="签证的有效期和停留期"
            android:textSize="@dimen/size14sp"
            android:textColor="@color/mine_item_color"/>
        <ImageView
            android:layout_width="@dimen/icon_arrow_right_W"
            android:layout_height="@dimen/icon_arrow_right_H"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_arrow_gray"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="@dimen/cols_paddingL"
        android:paddingRight="@dimen/cols_paddingL"
        android:paddingTop="@dimen/cols_paddingT"
        android:paddingBottom="@dimen/cols_paddingB"
        android:background="@color/titleBarColorWhite">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_alignParentLeft="true"
            android:text="护照过期了，但签证仍然在有效期内，是否可以继续使用，不做签证转移？"
            android:textSize="@dimen/size14sp"
            android:textColor="@color/mine_item_color"/>
        <ImageView
            android:layout_width="@dimen/icon_arrow_right_W"
            android:layout_height="@dimen/icon_arrow_right_H"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_arrow_gray"/>
    </RelativeLayout>
</LinearLayout>