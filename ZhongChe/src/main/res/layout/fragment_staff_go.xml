<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".dataAnalyze.StaffGoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/marginTop5dp"
        android:background="@color/blankSeparatorColor"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/divider_line"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/city_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="出发城市"
            android:padding="8dp"
            android:textColor="@color/mine_item_color"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/size14sp"/>
        <LinearLayout
            android:id="@+id/btn_exchange"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/btn_switch"/>
        </LinearLayout>
        <TextView
            android:id="@+id/city_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:hint="到达城市"
            android:padding="8dp"
            android:textColor="@color/mine_item_color"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/size14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/marginTop5dp"
        android:background="@drawable/divider_line"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <TextView
            android:id="@+id/time_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="出发开始时间"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/mine_item_color"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/size14sp"/>
        <View
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/dark_gray"/>
        <TextView
            android:id="@+id/time_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:hint="出发结束时间"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/mine_item_color"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/size14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/marginTop5dp"
        android:background="@drawable/divider_line">
        <com.neusoft.zcapplication.widget.ClearIconEditText
            android:id="@+id/tv_plan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入航班号"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/size14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blankSeparatorColor"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="@dimen/marginTop5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_shape_exit_btn"
            android:gravity="center"
            android:padding="8dp"
            android:text="查询"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/size16sp"/>
        <TextView
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/marginTop5dp"
            android:background="@drawable/bg_shape_exit_btn"
            android:gravity="center"
            android:padding="8dp"
            android:text="重置"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/size16sp"/>
    </LinearLayout>

    <com.andview.refreshview.XRefreshView  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:xrefreshview="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/custom_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xrefreshview:isHeightMatchParent="true"
        xrefreshview:isWidthMatchParent="true">
        <ListView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:listSelector="@android:color/transparent"
            android:id="@+id/staffGoListView"
            android:layout_height="wrap_content"></ListView>
    </com.andview.refreshview.XRefreshView>
</LinearLayout>