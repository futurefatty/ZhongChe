<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/titleBarColorWhite"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <LinearLayout
        android:id="@+id/item_out_trip_del_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingRight="6dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:src="@drawable/btn_delete"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/titleBarColorWhite"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_out_trip_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/mine_item_color"
            android:textSize="@dimen/size14sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/item_out_trip_from_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="出发城市"
                    android:maxLines="1"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textColor="@color/mine_item_color"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="@dimen/size14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_out_trip_switch"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="5dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/btn_switch"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/item_out_trip_to_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="到达城市"
                    android:maxLines="1"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textColor="@color/mine_item_color"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="@dimen/size14sp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/item_out_trip_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:hint="出发时间"
            android:padding="8dp"
            android:textColor="@color/mine_item_color"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/size14sp"/>
    </LinearLayout>
</LinearLayout>