<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/cols_paddingL"
    android:paddingRight="@dimen/cols_paddingL">
    <LinearLayout
        android:id="@+id/icon_psg_del_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:layout_width="@dimen/icon_add_size"
            android:layout_height="@dimen/icon_add_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_delete"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/cols_paddingB"
            android:paddingLeft="@dimen/cols_paddingL"
            android:paddingRight="@dimen/cols_paddingL"
            android:paddingTop="@dimen/cols_paddingT">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="证件类型"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/size14sp"/>
            <TextView
                android:id="@+id/item_psg_card_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="请选择"
                android:textColor="@color/light_gray"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/size14sp"/>
            <ImageView
                android:id="@+id/item_psg_card_type_arrow"
                android:layout_width="@dimen/icon_arrow_right_W"
                android:layout_height="@dimen/icon_arrow_right_H"
                android:scaleType="fitXY"
                android:src="@mipmap/btn_arrow_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/divider_line"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/cols_paddingL">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="证件号码"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/size14sp"/>
            <EditText
                android:id="@+id/item_psg_card_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right"
                android:hint="请填写证件号码"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingRight="@dimen/cols_paddingL"
                android:paddingTop="@dimen/cols_paddingT"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/cols_text_size"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/cols_paddingB"
            android:paddingLeft="@dimen/cols_paddingL"
            android:paddingRight="@dimen/cols_paddingL"
            android:paddingTop="@dimen/cols_paddingT">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="证件有效期"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/size14sp"/>
            <TextView
                android:id="@+id/item_psg_card_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="请选择"
                android:textColor="@color/light_gray"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/size14sp"/>
            <ImageView
                android:layout_width="@dimen/icon_arrow_right_W"
                android:layout_height="@dimen/icon_arrow_right_H"
                android:scaleType="fitXY"
                android:src="@mipmap/btn_arrow_gray"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>