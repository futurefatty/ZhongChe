<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/horizontal_margin">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_white_back"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_reimburse_voucher"
            android:textColor="@color/title_text"
            android:textSize="@dimen/size16sp"/>
        <LinearLayout
            android:id="@+id/btn_personal_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/save_btn_marginTop"
                android:text="@string/save"
                android:textColor="@color/title_text"
                android:textSize="@dimen/size14sp"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/titleBarColorWhite"
        android:orientation="vertical"
        android:paddingLeft="@dimen/cols_paddingL"
        android:paddingRight="@dimen/cols_paddingL">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:paddingBottom="@dimen/cols_paddingB"
            android:paddingLeft="@dimen/cols_paddingL"
            android:paddingRight="@dimen/cols_paddingL"
            android:paddingTop="@dimen/cols_paddingT">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="类型"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/cols_text_size"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:hint="请选择"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/cols_text_size"/>
            <ImageView
                android:layout_width="@dimen/icon_arrow_right_W"
                android:layout_height="@dimen/icon_arrow_right_H"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY"
                android:src="@mipmap/btn_arrow_gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"
            android:paddingBottom="@dimen/cols_paddingB"
            android:paddingLeft="@dimen/cols_paddingL"
            android:paddingRight="@dimen/cols_paddingL"
            android:paddingTop="@dimen/cols_paddingT">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="抬头"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/cols_text_size"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="必填，企业名称"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/cols_text_size"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lineColor"
            android:paddingBottom="@dimen/cols_paddingB"
            android:paddingLeft="@dimen/cols_paddingL"
            android:paddingRight="@dimen/cols_paddingL"
            android:paddingTop="@dimen/cols_paddingT">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="税号"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/cols_text_size"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="必填，纳税人识别号"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/cols_text_size"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/titleBarColorWhite"
        android:orientation="vertical"
        android:paddingLeft="@dimen/cols_paddingL"
        android:paddingRight="@dimen/cols_paddingL">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lineColor"
            android:paddingBottom="@dimen/cols_paddingB"
            android:paddingLeft="@dimen/cols_paddingL"
            android:paddingRight="@dimen/cols_paddingL"
            android:paddingTop="@dimen/cols_paddingT">
            <TextView
                android:id="@+id/id_no_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="需要增值税专用发票"
                android:textColor="@color/mine_item_color"
                android:textSize="@dimen/cols_text_size"/>
            <ToggleButton
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_toggle_btn"
                android:textOff=""
                android:textOn=""/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>