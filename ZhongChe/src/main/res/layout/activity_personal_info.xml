        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_margin_top"
            android:background="@color/lineColor"
            android:orientation="horizontal"
            android:padding="@dimen/edit_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/mobile"
                android:textColor="@color/edit_text_color"
                android:textSize="@dimen/cols_text_size"/>
            <TextView
                android:id="@+id/tv_mobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="@dimen/cols_text_size"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lineColor"
            android:orientation="horizontal"
            android:padding="@dimen/edit_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/email"
                android:textColor="@color/edit_text_color"
                android:textSize="@dimen/cols_text_size"/>
            <TextView
                android:id="@+id/tv_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="@dimen/cols_text_size"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_margin_top"
            android:background="@color/lineColor"
            android:orientation="horizontal"
            android:padding="@dimen/edit_padding"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="修改登录密码"
                android:textColor="@color/edit_text_color"
                android:textSize="@dimen/cols_text_size"/>
            <ImageView
                android:layout_width="@dimen/icon_arrow_right_W"
                android:layout_height="@dimen/icon_arrow_right_H"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/btn_arrow_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edit_margin_top"
            android:layout_marginTop="@dimen/edit_margin_top"
            android:background="@color/lineColor"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/edit_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="退出登录"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/size16sp"/>
        </RelativeLayout>

