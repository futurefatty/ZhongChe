<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/titleBarColorWhite"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/icon_del_person"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_delete" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邓小等" />

                <TextView
                    android:id="@+id/item_person_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(中车员工)"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/size12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_person_id_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="身份证" />

                <TextView
                    android:id="@+id/item_person_idNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="员工编号" />

                <TextView
                    android:id="@+id/item_person_employeeCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="手机号码" />

                <TextView
                    android:id="@+id/item_person_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13800138000"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="核算主体" />

                <TextView
                    android:id="@+id/item_person_accountUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国中车股份有限公司"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="部门" />

                <TextView
                    android:id="@+id/item_person_depart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国中车股份有限公司"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_linear_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:text="项目经理" />

                    <TextView
                        android:id="@+id/item_project_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="请点击选择项目经理"
                        android:text=""
                        android:textColor="@color/RedColor"
                        android:textColorHint="@color/RedColor" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IPD项目差旅超标申请必填"
                    android:textColor="@color/RedColor"
                    android:textSize="@dimen/common_textsize_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:gravity="right">

            <ImageView
                android:layout_width="@dimen/icon_arrow_right_W"
                android:layout_height="@dimen/icon_arrow_right_H"
                android:src="@mipmap/btn_arrow_gray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>