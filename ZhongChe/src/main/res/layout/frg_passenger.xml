<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    android:orientation="vertical">
    <TextView
        android:id="@+id/frg_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/horizontal_margin">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_white_back"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="常用联系人"
            android:textColor="@color/title_text"
            android:textSize="@dimen/size16sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp">
        <LinearLayout
            android:id="@+id/btn_add_passenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_btn_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/btn_add_paddingV"
            android:paddingLeft="@dimen/btn_add_paddingH"
            android:paddingRight="@dimen/btn_add_paddingH"
            android:paddingTop="@dimen/btn_add_paddingV">
            <ImageView
                android:layout_width="@dimen/icon_add_size"
                android:layout_height="@dimen/icon_add_size"
                android:src="@mipmap/icon_add"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:text="@string/add_passenger"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/size14sp"/>
        </LinearLayout>
    </LinearLayout>
    <com.neusoft.zcapplication.widget.swipList.SwipeMenuListView
        android:id="@+id/frg_passenger_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/bg_light_gray"
        android:dividerHeight="5dp"
        android:listSelector="@android:color/transparent"/>
</LinearLayout>