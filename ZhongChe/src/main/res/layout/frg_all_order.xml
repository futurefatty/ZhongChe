<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    android:fillViewport="true"
    android:orientation="vertical">
    <TextView
        android:id="@+id/frg_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="预订申请单"
            android:textColor="@color/title_text"
            android:textSize="@dimen/size16sp"/>
        <TextView
            android:id="@+id/btn_edit_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/horizontal_margin"
            android:text="编辑"
            android:textColor="@color/whiteText"
            android:visibility="visible"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/frg_all_order_inner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/navbar_checked"
            android:gravity="center"
            android:padding="10dp"
            android:text="国内差旅"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/frg_all_order_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/navbar_unchecked"
            android:gravity="center"
            android:padding="10dp"
            android:text="国际差旅"
            android:textColor="@color/tab_unpressed"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/frg_all_order_hotel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/navbar_unchecked"
            android:gravity="center"
            android:padding="10dp"
            android:text="酒店"
            android:textColor="@color/tab_unpressed"
            android:textSize="16sp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#999999">
        <!--国内预定申请单列表-->
            <ListView
                android:id="@+id/frg_apply_order_list_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_light_gray"
                android:cacheColorHint="@android:color/transparent"
                android:divider="#000"
                android:dividerHeight="0dp"
                android:listSelector="@android:color/transparent"
                android:overScrollMode="never"/>

        <!--国际预定申请单列表-->

        <ListView
            android:id="@+id/frg_apply_order_list_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_light_gray"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#000"
            android:dividerHeight="0dp"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never"
            android:visibility="gone"/>
        <!--酒店预定申请单列表-->

        <ListView
            android:id="@+id/frg_apply_order_list_hotel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_light_gray"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#000"
            android:dividerHeight="0dp"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:minHeight="110dp"
        android:orientation="vertical"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/frg_add_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_shape_exit_btn"
            android:gravity="center"
            android:padding="8dp"
            android:text="创建申请单"
            android:textColor="@color/whiteText"
            android:textSize="@dimen/size16sp"/>
        <TextView
            android:id="@+id/frg_order_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/policy_str"
            android:textColor="#666666"
            android:textSize="@dimen/size12sp"/>
    </LinearLayout>
</LinearLayout>

