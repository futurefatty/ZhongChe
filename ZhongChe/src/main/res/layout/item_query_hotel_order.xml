<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/divider_line"
    android:orientation="vertical"
    android:padding="12dp">
    <TextView
        android:id="@+id/item_hotel_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/mine_item_color"
        android:textSize="@dimen/size14sp"/>
    <TextView
        android:id="@+id/item_hotel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/item_hotel_channel"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/mine_item_color"
        android:textSize="@dimen/size14sp"/>

    <TextView
        android:id="@+id/item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_hotel_name"
        android:layout_marginTop="5dp"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/size12sp"/>

    <!-- 以下为第三行 -->
    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_address"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/size12sp"/>
    <TextView
        android:id="@+id/item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/size12sp"/>

</RelativeLayout>