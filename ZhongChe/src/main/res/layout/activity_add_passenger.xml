<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_psg_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    android:orientation="vertical">
    <TextView
        android:id="@+id/frg_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/horizontal_margin">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_white_back"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_passenger"
            android:textColor="@color/title_text"
            android:textSize="@dimen/size16sp"/>
        <LinearLayout
            android:id="@+id/btn_personal_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/save_btn_marginTop"
                android:text="@string/save"
                android:textColor="@color/title_text"
                android:textSize="@dimen/size14sp"/>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingLeft="24dp"
                android:paddingTop="@dimen/cols_paddingT">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旅客姓名"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/size12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/titleBarColorWhite"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/cols_paddingL"
                android:paddingRight="@dimen/cols_paddingL">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/divider_line"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/cols_paddingL"
                    android:paddingRight="@dimen/cols_paddingL">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="中文姓名"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/size14sp"/>
                    <EditText
                        android:id="@+id/act_add_psg_cn_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="确保与证件保持一致"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/size14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/divider_line"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/cols_paddingL"
                    android:paddingRight="@dimen/cols_paddingL">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="英文姓"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/size14sp"/>
                    <EditText
                        android:id="@+id/act_add_psg_en_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请填写英文姓"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/cols_text_size"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lineColor"
                    android:paddingLeft="@dimen/cols_paddingL"
                    android:paddingRight="@dimen/cols_paddingL">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="英文名"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/size14sp"/>
                    <EditText
                        android:id="@+id/act_add_psg_en_name1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请填写英文名"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/size14sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/cols_paddingB"
                android:paddingLeft="24dp"
                android:paddingTop="@dimen/cols_paddingT">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/size12sp"/>
            </LinearLayout>
            <com.neusoft.zcapplication.widget.DefinedListView
                android:id="@+id/add_psg_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@color/bg_light_gray"
                android:dividerHeight="5dp"
                android:listSelector="@android:color/transparent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/lineColor"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">
                <LinearLayout
                    android:id="@+id/btn_add_certificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_btn_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp">
                    <ImageView
                        android:layout_width="@dimen/icon_add_size"
                        android:layout_height="@dimen/icon_add_size"
                        android:src="@mipmap/icon_add"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/horizontal_margin"
                        android:text="添加证件"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/size14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_del_certificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/cancel_btn_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp">
                    <ImageView
                        android:layout_width="@dimen/icon_add_size"
                        android:layout_height="@dimen/icon_add_size"
                        android:src="@drawable/btn_delete_gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/horizontal_margin"
                        android:text="删除证件"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/size14sp"/>
                </LinearLayout>
            </LinearLayout>

