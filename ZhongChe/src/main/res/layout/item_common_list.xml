<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">
    <TextView
        android:id="@+id/item_base_list_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/size14sp"/>

    <TextView
        android:id="@+id/item_base_list_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/item_base_list_item1"
        android:background="@drawable/visa_bg"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="#fff"
        android:textSize="@dimen/size12sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/item_base_list_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/item_base_list_item1"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/size12sp"/>

    <TextView
        android:id="@+id/item_base_list_item4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/item_base_list_item3"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/size12sp"/>

    <ImageView
        android:layout_width="@dimen/icon_arrow_right_W"
        android:layout_height="@dimen/icon_arrow_right_H"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/btn_arrow_gray"/>
</RelativeLayout>