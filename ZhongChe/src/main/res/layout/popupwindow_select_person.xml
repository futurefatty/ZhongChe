<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popupwindow_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="选择乘机人员"
            android:textColor="@color/mine_item_color"
            android:textSize="@dimen/size18sp" />

        <TextView
            android:id="@+id/popup_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_shape_exit_btn"
            android:padding="5dp"
            android:text="  搜索  "
            android:textColor="@color/title_text"
            android:textSize="@dimen/size16sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/depart_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_white_border"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/depart_search_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:hint="请输入..."
                android:text=""
                android:textColor="@color/WeakTextColor"
                android:textSize="@dimen/size14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/depart_search_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_shape_exit_btn"
            android:padding="5dp"
            android:text="  搜索  "
            android:textColor="@color/title_text"
            android:textSize="@dimen/size16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_project_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:text="姓名:"
                android:textColor="@color/mine_item_color"
                android:textSize="@dimen/size14sp" />

            <EditText
                android:id="@+id/popup_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:hint="请输入姓名"
                android:padding="10dp"
                android:textSize="@dimen/size14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:text="工号:"
                android:textColor="@color/mine_item_color"
                android:textSize="@dimen/size14sp" />

            <EditText
                android:id="@+id/popup_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:hint="请输入工号"
                android:padding="10dp"
                android:textSize="@dimen/size14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_current_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp">

            <TextView
                android:id="@+id/item_current_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <ImageView
                android:id="@+id/icon_check"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/btn_singleselection_pressed" />
        </LinearLayout>
        <!--<RadioGroup
            android:id="@+id/radioG_Person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp">
                <com.neusoft.zcapplication.widget.NavBarRadioButton
                    android:id="@+id/nav_person1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text=" 张叉叉"
                    android:textSize="@dimen/size14sp"
                    android:textColor="@color/mine_item_color"
                    android:checked="false"
                    app:drawableLeft="@drawable/selector_radio_btn"
                    app:drawableSize="18dp" />
            </LinearLayout>
        </RadioGroup>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_light_gray"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已授权人员"
                android:textColor="@color/mine_item_color" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <ListView
        android:id="@+id/popupwin_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/divider_line"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#000"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:padding="10dp">

        <TextView
            android:id="@+id/select_person_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_exit_btn"
            android:padding="5dp"
            android:text="  确定  "
            android:textColor="@color/title_text"
            android:textSize="@dimen/size16sp" />

        <TextView
            android:id="@+id/select_person_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:background="@drawable/bg_white_red"
            android:padding="5dp"
            android:text="  取消  "
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/size16sp" />
    </LinearLayout>
</LinearLayout>