<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_light_gray"
    android:orientation="vertical"
    android:paddingTop="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider_line"
        android:padding="5dp">
        <TextView
            android:id="@+id/item_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="采购订单"
            android:textColor="@color/mine_item_color"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider_line"
        android:padding="12dp">
        <LinearLayout
            android:id="@+id/item_order_external_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_fromCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/mine_item_color"
                android:textSize="@dimen/size14sp"/>

            <ImageView
                android:id="@+id/icon_arrow_toRight"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/item_fromCity"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_arrow_oneway_darkgray"/>

            <TextView
                android:id="@+id/item_toCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/item_status"
                android:layout_toEndOf="@+id/icon_arrow_toRight"
                android:layout_toRightOf="@+id/icon_arrow_toRight"
                android:textColor="@color/mine_item_color"
                android:textSize="@dimen/size14sp" />
        </LinearLayout>

        <!--<TextView
            android:id="@+id/item_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/size12sp"
            android:visibility="invisible"/>-->

        <!-- 以上为第一行，以下为第二行 -->

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_order_external_line1"
            android:layout_marginTop="5dp"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/size14sp"/>
        <TextView
            android:id="@+id/item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/size12sp"/>

        <LinearLayout
            android:id="@+id/item_order_external_bill_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_time"
            android:padding="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合编号："
                android:textColor="@color/light_gray"
                android:textSize="@dimen/size14sp"/>
            <TextView
                android:id="@+id/item_apply_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/size14sp"/>
        </LinearLayout>
        <!--预定申请单号-->
        <TextView
            android:id="@+id/item_apply_order_bills_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_order_external_bill_layout"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/size14sp"/>
        <LinearLayout
            android:id="@+id/item_order_external_psg_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_apply_order_bills_num"
            android:padding="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乘机人："
                android:textColor="@color/light_gray"
                android:textSize="@dimen/size14sp"/>
            <TextView
                android:id="@+id/item_order_external_psg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/size14sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_order_external_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_order_external_psg_layout"
            android:padding="0dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出发时间："
                android:textColor="@color/light_gray"
                android:textSize="@dimen/size14sp"/>
            <TextView
                android:id="@+id/item_order_external_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/size14sp"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider_line"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:id="@+id/item_btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@drawable/cancel_btn_border"
            android:paddingBottom="@dimen/btn_cancel_paddingV"
            android:paddingLeft="@dimen/btn_cancel_paddingH"
            android:paddingRight="@dimen/btn_cancel_paddingH"
            android:paddingTop="@dimen/btn_cancel_paddingV"
            android:text="删除"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/size12sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/item_btn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/cancel_btn_border"
            android:paddingBottom="@dimen/btn_cancel_paddingV"
            android:paddingLeft="@dimen/btn_cancel_paddingH"
            android:paddingRight="@dimen/btn_cancel_paddingH"
            android:paddingTop="@dimen/btn_cancel_paddingV"
            android:text="退票"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/size12sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/item_btn_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/cancel_btn_border"
            android:paddingBottom="@dimen/btn_cancel_paddingV"
            android:paddingLeft="@dimen/btn_cancel_paddingH"
            android:paddingRight="@dimen/btn_cancel_paddingH"
            android:paddingTop="@dimen/btn_cancel_paddingV"
            android:text="改签"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/size12sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/item_btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/cancel_btn_border"
            android:paddingBottom="@dimen/btn_cancel_paddingV"
            android:paddingLeft="@dimen/btn_cancel_paddingH"
            android:paddingRight="@dimen/btn_cancel_paddingH"
            android:paddingTop="@dimen/btn_cancel_paddingV"
            android:text="评价"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/size12sp"/>
    </LinearLayout>
</LinearLayout>