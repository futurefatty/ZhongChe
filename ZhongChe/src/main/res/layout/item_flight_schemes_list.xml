<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    android:orientation="vertical"
    android:paddingTop="15dp">
    <com.neusoft.zcapplication.widget.DefinedExpandListView
        android:id="@+id/passenger_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_light_gray"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#000"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/borderWidth"
        android:background="@color/divider_line_color"
        android:layerType="software"/>

    <!-- 下单部分 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider_line"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/size20sp"/>
        <TextView
            android:id="@+id/btn_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_book_bg"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:text="确认"
            android:textColor="@color/titleBarColorWhite"
            android:textSize="@dimen/size18sp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/item_flight_schemes_price_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider_line"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_flight_schemes_price_detail_tv1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color6"
                android:textSize="@dimen/size12sp"/>
            <TextView
                android:id="@+id/item_flight_schemes_price_detail_tv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color6"
                android:textSize="@dimen/size12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">
            <TextView
                android:id="@+id/item_flight_schemes_price_detail_tv3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color6"
                android:textSize="@dimen/size12sp"/>
            <TextView
                android:id="@+id/item_flight_schemes_price_detail_tv4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color6"
                android:textSize="@dimen/size12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>