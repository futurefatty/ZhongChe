<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/D16"
    android:paddingRight="@dimen/D16">

    <TextView
        android:id="@+id/tv_add_journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:drawableLeft="@mipmap/icon_add"
        android:drawablePadding="@dimen/D6"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/D14"
        android:paddingBottom="@dimen/D14"
        android:text="添加行程"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/common_textsize_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="起降均为当地时间"
        android:textColor="@color/C666666"
        android:textSize="@dimen/common_textsize_12" />
</RelativeLayout>